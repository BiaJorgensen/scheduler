<div class="row">
  <div class="col-auto">
    <h2>Welcome!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Current Appointments:</h3>

    {{#each appointments as |appointments|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/appointments/{{appointments.id}}">{{appointments.date}}{{appointments.time}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{appointments.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
</div>

